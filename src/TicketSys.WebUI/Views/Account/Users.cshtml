@model IEnumerable<TicketSys.WebUI.ViewModels.AccountViewModel>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container-fluid">

    <!-- Bloco 1 -->
    <div class="bg-light p-3 rounded shadow-sm mb-4">
        <h2 class="mb-3">Usuários</h2>
        <a asp-action="Register" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle"></i> Novo Usuário
        </a>
    </div>

    <!-- Bloco 2 -->
    <div class="bg-light p-3 rounded shadow-sm">
        <table id="listUsers" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Ativo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.Id">
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@(item.IsActive ? "Sim" : "Não")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-sm btn-primary mb-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            initTable();
        });

        function initTable() {
            $('#listUsers').DataTable({
                responsive: true,
                processing: true,
                language: {
                    url: '/lib/datatables/i18n/pt-BR.json'
                },
                columnDefs: [
                    { orderable: false, targets: -1 },
                    { width: "80px", targets: -1 }
                ]
            });
        }
    </script>
}