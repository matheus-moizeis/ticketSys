<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketSys</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Estilos do projeto -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TicketSys.WebUI.styles.css" asp-append-version="true" />
    <!-- Libs -->
    <link rel="stylesheet" href="~/lib/datatables/css/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/css/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/css/toastr.min.css" />
</head>

<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> TicketSys
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                    aria-controls="navbarMain" aria-expanded="false" aria-label="Alternar navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav mx-auto me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OrderService" asp-action="Index">
                                <i class="bi bi-list-task"></i> Ordens de Serviço
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Unit" asp-action="Index">
                                <i class="bi bi-building"></i> Unidades
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="WorkQueue" asp-action="Index">
                                <i class="bi bi-clipboard-check"></i> Fila de Trabalho
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-bar-chart-line"></i> Relatórios
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i> Sair
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="padding-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Mensagem Carregando -->
    <div id="processingModal" class="modal fade" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-3">
                <div class="modal-body text-center p-5">
                    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                    <h5 class="mt-4 fw-semibold">Processando solicitação...</h5>
                    <p class="text-muted mb-0">Por favor, aguarde um momento.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light border-top text-center py-3 mt-auto">
        <div class="container">
            <span class="text-muted">&copy; 2025 - TicketSys</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables/js/datatables.js"></script>
    <script src="~/lib/sweetalert2/js/sweetalert2.min.js"></script>
    <script src="~/lib/toastr/js/toastr.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-ajax-unotruvise/dist/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>