@{
    ViewData["Title"] = "Ordens de Serviço";
}

<div class="container-fluid mt-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Pesquisar por título ou unidade"
                    aria-label="Pesquisar">
                <select class="form-select" aria-label="Status">
                    <option selected>Todos os Status</option>
                    <option value="1">Pendente</option>
                    <option value="2">Concluída</option>
                </select>
                <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i> Buscar</button>
            </div>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-success"><i class="bi bi-plus-circle"></i> Nova OS</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th scope="col">Unidade</th>
                    <th scope="col">Status</th>
                    <th scope="col">Data de Abertura</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">001</th>
                    <td>Troca de lâmpada</td>
                    <td>Unidade Centro</td>
                    <td><span class="badge bg-warning text-dark">Pendente</span></td>
                    <td>15/09/2025</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-primary me-1"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
                <tr>
                    <th scope="row">002</th>
                    <td>Configuração de impressora</td>
                    <td>Unidade Norte</td>
                    <td><span class="badge bg-success">Concluída</span></td>
                    <td>12/09/2025</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-primary me-1"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <nav aria-label="Paginação">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Próxima</a>
            </li>
        </ul>
    </nav>
</div>