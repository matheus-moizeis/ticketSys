@model IEnumerable<TicketSys.Application.DTOs.UnitDTO>

@{
    ViewData["Title"] = "Unidades";
}

<div class="container-fluid">

    <!-- Bloco 1 -->
    <div class="bg-light p-3 rounded shadow-sm mb-4">
        <h2 class="mb-3">Unidades</h2>
        <a asp-action="Create" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle"></i> Nova Unidade
        </a>
    </div>

    <!-- Bloco 2 -->
    <div class="bg-light p-3 rounded shadow-sm">
        <table id="listUnits" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th>Ativo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.Id">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@(item.Active ? "Sim" : "Não")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-sm btn-primary mb-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger mb-1 delete-button" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            initTable();

            const deleteButtons = document.querySelectorAll('.delete-button');

            deleteButtons.forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    const id = this.getAttribute('data-id');

                    Swal.fire({
                        title: 'Tem certeza?',
                        text: 'Você realmente deseja excluir este registro?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Sim, excluir!',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            deleteUnit(id);
                        }
                    });
                });
            });
        });

        function initTable() {
            $('#listUnits').DataTable({
                responsive: true,
                processing: true,
                language: {
                    url: '/lib/datatables/i18n/pt-BR.json'
                },
                columnDefs: [
                    { orderable: false, targets: -1 },
                    { width: "80px", targets: -1 }
                ]
            });
        }

        function deleteUnit(id) {

            fetch(`/Unit/Delete/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        removeLine(id);
                    } else {
                        showErrorToast('Erro ao excluir o registro.');
                    }
                })
                .catch(error => {
                    toastr.error('Erro na requisição.');
                });
        }

        function removeLine(id) {
            const row = document.getElementById(`row-${id}`);
            if (row) {
                row.remove();
            }
            toastr.success('Registro excluído com sucesso!');
        }
    </script>
}